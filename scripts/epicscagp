cagvardir="/u1/gateway"
cagcfgdir="/reg/g/pcds/gateway/config"
cagprogram="/reg/g/pcds/package/epics/3.14/extensions/R3.14.12/bin/linux-x86_64/pvgwfd"
cagdbg=""

cagstart() {
  echo -n "Starting $1 gateway... "
  TIME=`date +%Y_%m_%d-%T`
  mkdir -p $cagvardir/$1
  /bin/rm -f $cagvardir/$1/gateway.log
  PROCSERV="/reg/g/pcds/package/procServ-2.5.1/procServ --allow --ignore ^D^C --logfile $cagvardir/$1/gateway.log.$TIME --name $1 $3"
  $PROCSERV $cagprogram -access $cagcfgdir/hosts -pvlist $cagcfgdir/$1.pvlist -home $cagvardir/$1 $cagdbg -prefix $2 -command $cagvardir/gateway.command $4 $5
  ln -s $cagvardir/$1/gateway.log.$TIME $cagvardir/$1/gateway.log
  echo " done"
}
