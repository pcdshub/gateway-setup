#!/bin/bash
#
#	/etc/rc.d/init.d/epicscagd-sxr-gmd
#
# Starts the EPICS CAG gateway
#
# chkconfig: - 99 1
# description: EPICS Channel Access Gateway
# processname: epicscagd-sxr-gmd

# Source function library.
. /etc/init.d/functions
. /etc/init.d/epicscagp

gwname=sxr-gmd
gwprefix=NET:CAG:SXR:GMD
gwprocport=30022

export EPICS_CA_ADDR_LIST=$SXR_BC
export EPICS_CAS_INTF_ADDR_LIST=`echo $PSCAG4_IFLIST | sed -e "s%${SXR_IF4}%%"`

case "$1" in
start)
	cagstart $gwname $gwprefix $gwprocport
	;;
name)
	echo "Gateway $gwname (prefix $gwprefix) runs on procServ port $gwprocport"
	;;
*)
	echo $"Usage: $0 {start|name}"
	exit 1
esac

exit $?
